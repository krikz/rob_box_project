# Секреты для Voice Assistant
# ВАЖНО: Не коммитить этот файл с реальными ключами!
# Скопировать как secrets.yaml и заполнить значения

# Yandex Cloud Speech
YANDEX_FOLDER_ID: "your-yandex-folder-id-here"
YANDEX_API_KEY: "your-yandex-api-key-here"

# DeepSeek API
DEEPSEEK_API_KEY: "your-deepseek-api-key-here"

# OpenAI (опционально)
OPENAI_API_KEY: "your-openai-api-key-here"

# Google Cloud (опционально)
GOOGLE_APPLICATION_CREDENTIALS: "/config/voice/google-credentials.json"
