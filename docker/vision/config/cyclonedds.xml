<?xml version="1.0" encoding="UTF-8"?>
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="any">
    <General>
      <!-- Полностью отключаем multicast -->
      <AllowMulticast>false</AllowMulticast>
    </General>
    <Discovery>
      <!-- Отключаем multicast для discovery -->
      <DefaultMulticastAddress>0.0.0.0</DefaultMulticastAddress>
    </Discovery>
    <Interfaces>
      <!-- Используем ТОЛЬКО eth0 (стандартное имя в Docker) -->
      <NetworkInterface name="eth0" autodetermine="false"/>
    </Interfaces>
  </Domain>
</CycloneDDS>