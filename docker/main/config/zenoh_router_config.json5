{
    // Zenoh Router конфигурация для Main Pi
    // Центральный роутер для связи Vision Pi <-> Main Pi <-> Внешний роутер
    
    "mode": "router",
    
    "connect": {
        "endpoints": [
            "tcp/zenoh.robbox.online:7447"  // Подключаемся к внешнему роутеру для удалённого управления
        ]
    },
    
    "listen": {
        "endpoints": [
            "tcp/10.1.1.10:7447"  // Main Pi eth0 Gigabit - принимаем соединения от Vision Pi ТОЛЬКО по Ethernet
        ]
    },
    
    "scouting": {
        "multicast": {
            "enabled": false  // Отключаем multicast
        },
        "gossip": {
            "enabled": true  // Включаем gossip для распространения информации о peers между роутерами
        }
    },
    
    "transport": {
        "shared_memory": {
            "enabled": true  // Включаем SHM для локальных нод на Main Pi
        }
    },
    
    "routing": {
        "peer": {
            "mode": "peer_to_peer"  // Разрешаем маршрутизацию между peers
        }
    }
}
