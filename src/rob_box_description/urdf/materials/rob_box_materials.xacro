<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- Rob Box Materials - Красивые материалы и текстуры -->
  <!-- ═══════════════════════════════════════════════════════════════ -->
  
  <!-- ────────────────────────────────────────────────────────────── -->
  <!-- Основные цвета -->
  <!-- ────────────────────────────────────────────────────────────── -->
  
  <!-- Белый глянцевый корпус робота -->
  <material name="rob_box_white">
    <color rgba="0.95 0.95 0.98 1.0"/>
  </material>
  
  <!-- Матовый черный для колес -->
  <material name="wheel_black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  
  <!-- Черный для сенсоров -->
  <material name="sensor_black">
    <color rgba="0.15 0.15 0.15 1.0"/>
  </material>
  
  <!-- ────────────────────────────────────────────────────────────── -->
  <!-- Акцентные цвета (для декора) -->
  <!-- ────────────────────────────────────────────────────────────── -->
  
  <!-- Киберпанк неоновый синий -->
  <material name="cyber_blue">
    <color rgba="0.0 0.7 1.0 1.0"/>
  </material>
  
  <!-- Неоновый фиолетовый -->
  <material name="neon_purple">
    <color rgba="0.58 0.0 0.83 1.0"/>
  </material>
  
  <!-- Ярко-зеленый неон -->
  <material name="neon_green">
    <color rgba="0.0 1.0 0.5 1.0"/>
  </material>
  
  <!-- Оранжевый акцент -->
  <material name="neon_orange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>
  
  <!-- ────────────────────────────────────────────────────────────── -->
  <!-- Прикольные варианты для тела робота -->
  <!-- ────────────────────────────────────────────────────────────── -->
  
  <!-- Вариант 1: Космический градиент -->
  <material name="space_gradient">
    <color rgba="0.1 0.1 0.3 1.0"/>  <!-- Темно-синий как космос -->
  </material>
  
  <!-- Вариант 2: Матовое золото -->
  <material name="matte_gold">
    <color rgba="0.85 0.65 0.13 1.0"/>
  </material>
  
  <!-- Вариант 3: Серебристый металлик -->
  <material name="silver_metallic">
    <color rgba="0.75 0.75 0.75 1.0"/>
  </material>
  
  <!-- Вариант 4: Матовый красный спорткар -->
  <material name="racing_red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  
  <!-- Вариант 5: Глубокий синий -->
  <material name="deep_blue">
    <color rgba="0.0 0.2 0.6 1.0"/>
  </material>
  
  <!-- ────────────────────────────────────────────────────────────── -->
  <!-- Прикольные варианты для колес -->
  <!-- ────────────────────────────────────────────────────────────── -->
  
  <!-- Вариант 1: Неоновые диски -->
  <material name="wheel_neon_blue">
    <color rgba="0.0 0.5 1.0 1.0"/>
  </material>
  
  <!-- Вариант 2: Золотые диски -->
  <material name="wheel_gold">
    <color rgba="1.0 0.84 0.0 1.0"/>
  </material>
  
  <!-- Вариант 3: Хром -->
  <material name="wheel_chrome">
    <color rgba="0.9 0.9 0.95 1.0"/>
  </material>
  
  <!-- Вариант 4: Зеленый неон -->
  <material name="wheel_neon_green">
    <color rgba="0.0 1.0 0.4 1.0"/>
  </material>
  
  <!-- ────────────────────────────────────────────────────────────── -->
  <!-- Стандартные ROS материалы (для совместимости) -->
  <!-- ────────────────────────────────────────────────────────────── -->
  
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  
  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- РЕКОМЕНДУЕМЫЕ КОМБИНАЦИИ -->
  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!--
  
  🎨 СТИЛЬ 1: Классический (текущий)
    Тело:   rob_box_white
    Колеса: wheel_black
    
  🎨 СТИЛЬ 2: Киберпанк
    Тело:   space_gradient (темно-синий)
    Колеса: wheel_neon_blue (неоновые синие диски)
    
  🎨 СТИЛЬ 3: Гоночный
    Тело:   racing_red (красный спорткар)
    Колеса: wheel_gold (золотые диски)
    
  🎨 СТИЛЬ 4: Премиум
    Тело:   matte_gold (матовое золото)
    Колеса: wheel_black (черные колеса)
    
  🎨 СТИЛЬ 5: Хром
    Тело:   silver_metallic (серебро)
    Колеса: wheel_chrome (хромированные)
    
  🎨 СТИЛЬ 6: Matrix
    Тело:   black (черный)
    Колеса: wheel_neon_green (зеленый неон)
  
  Чтобы изменить стиль, замените в rob_box_complete.xacro:
    <material name="rob_box_white"/> на <material name="racing_red"/>
    <material name="wheel_black"/> на <material name="wheel_gold"/>
    
  -->

</robot>
